# Production Environment Variables
# Copy this to .env.production and fill in real values
# NEVER commit the actual .env.production file

# Database (production - use PostgreSQL or hosted database)
DATABASE_URL="postgresql://user:password@host:5432/greenwood_hall_prod"

# Postmark (production - requires approved account)
POSTMARK_SERVER_TOKEN="your-production-postmark-token"
FROM_EMAIL="setup@greenwood-hall.com"

# Stripe (production - live mode keys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_key_here"
STRIPE_SECRET_KEY="sk_live_your_key_here"

# Application
NEXT_PUBLIC_APP_URL="https://greenwood-hall.com"

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS="true"
DEV_MODE="false"
